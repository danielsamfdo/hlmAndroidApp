<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mydomain.hlmA" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Heavenly Ladder Ministries</name>
    <description>
        Heavenly Ladder Ministries Application
    </description>
    <author email="danielsamfdo@gmail.com" href="http://danielsamfdo.github.io">
        Daniel Sam Pete Thiyagu
    </author>
    <icon density="mdpi" height="57" platform="android" src="www/images/photo.png" width="57" />
    <content src="splash.html" />
    <access origin="*" />
    <preference name="SplashScreenDelay" value="0" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
